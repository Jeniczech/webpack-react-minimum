{
    "compilerOptions": {
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "target": "ES2020",
        "strict": true,
        "jsx": "react-jsx",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "allowSyntheticDefaultImports": true,
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            }
        ]
    },
    "includes": [
        "src"
    ]
}
